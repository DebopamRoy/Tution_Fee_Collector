<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/student_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/paid_stu_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paid_stu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:padding="5dp"
            android:text="Debopam Roy"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/paid_stu_user_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paid_stu_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_outline_account_circle_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/actor"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="debo_roy"
            app:layout_constraintBottom_toTopOf="@+id/paid_stu_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/paid_stu_name" />

        <TextView
            android:id="@+id/paid_stu_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/mode_of_payment"
            android:drawablePadding="10dp"
            android:fontFamily="@font/actor"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Net Banking"
            app:layout_constraintBottom_toTopOf="@+id/paid_stu_payment_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@id/paid_stu_user_name" />/


        <TextView
            android:id="@+id/paid_stu_payment_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_outline_date_range_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/actor"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="August 08, 2020 20:46:39"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/paid_stu_mode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>