<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:elevation="5dp"
    android:clickable="true"
    android:layout_margin="10dp"
    android:background="@drawable/stroke_background_light"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stu_home_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students"
        android:paddingTop="10dp"
        android:fontFamily="@font/aldrich"
        android:id="@+id/stu_home_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/stu_home_image"
        app:layout_constraintStart_toStartOf="@+id/stu_home_image"
        app:layout_constraintTop_toBottomOf="@+id/stu_home_image" />

</androidx.constraintlayout.widget.ConstraintLayout>